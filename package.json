{
    "name": "sside-net",
    "private": true,
    "description": "",
    "license": "",
    "sideEffects": false,
    "scripts": {
        "build": "run-s prisma:generate build:remix",
        "build:remix": "remix build",
        "start": "run-s prisma:migrate start:server",
        "start:server": "remix-serve build",
        "dev": "cross-env PORT=33000 run-s prisma:dev dev:remix",
        "dev:remix": "cross-env PORT=33000 concurrently \"remix dev\" \"sass --watch --no-source-map app/:app\"",
        "prisma:dev": "prisma migrate dev",
        "prisma:generate": "prisma generate",
        "prisma:migrate": "prisma migrate deploy",
        "docker:deploy": "run-s docker:build docker:push",
        "docker:build": "docker image build --tag ssidenet/sside-net:latest --file ./docker/app/Dockerfile .",
        "docker:push": "docker push ssidenet/sside-net:latest",
        "lint": "eslint app",
        "prepare": "husky install",
        "typecheck": "tsc -b"
    },
    "dependencies": {
        "@prisma/client": "^4.1.1",
        "@remix-run/node": "^1.6.6",
        "@remix-run/react": "^1.6.6",
        "@remix-run/serve": "^1.6.6",
        "choices.js": "^10.1.0",
        "cross-env": "^7.0.3",
        "destyle.css": "^3.0.2",
        "dotenv": "^16.0.1",
        "easymde": "^2.16.1",
        "feed": "^4.2.2",
        "http-status-codes": "^2.2.0",
        "luxon": "^3.0.1",
        "nanoid": "^4.0.0",
        "npm-run-all": "^4.1.5",
        "pino": "^8.3.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "remix-auth": "^3.2.2",
        "remix-auth-form": "^1.1.2",
        "safe-marked": "^11.0.0",
        "validator": "^13.7.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.0.3",
        "@commitlint/config-conventional": "^17.0.3",
        "@remix-run/dev": "^1.6.6",
        "@remix-run/eslint-config": "^1.6.6",
        "@types/luxon": "^3.0.0",
        "@types/node": "^18.6.2",
        "@types/react": "^18.0.15",
        "@types/react-dom": "^18.0.6",
        "@types/validator": "^13.7.4",
        "concurrently": "^7.3.0",
        "eslint": "^8.20.0",
        "husky": "^8.0.1",
        "npm-check-updates": "^16.0.3",
        "prettier": "^2.7.1",
        "pretty-quick": "^3.1.3",
        "prisma": "^4.1.1",
        "sass": "^1.54.0",
        "ts-node": "^10.9.1",
        "typescript": "^4.7.4"
    },
    "engines": {
        "node": ">=16"
    }
}
