// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model BlogEntry {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  slug      String    @unique
  publishAt DateTime?

  blogEntryBodies    BlogEntryBodyHistory[]
  blogEntryBodyDraft BlogEntryBodyDraft?
  blogMetaTags       BlogMetaTag[]
}

model BlogEntryBodyHistory {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  title String
  body  String

  blogEntryId String
  blogEntry   BlogEntry @relation(fields: [blogEntryId], references: [id])
}

model BlogEntryBodyDraft {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  title String
  body  String

  blogEntry   BlogEntry @relation(fields: [blogEntryId], references: [id])
  blogEntryId String    @unique
}

model BlogMetaTag {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name String @unique

  blogEntries BlogEntry[]
}
